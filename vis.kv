#:kivy 1.0.9


<TextGague>
    size: 580, 200

    RelativeLayout:
        size_hint: None, None
        pos: root.pos
        canvas:
            Color:
                rgba: 0.2,0.2,0.2,1,
            Rectangle:
                size: root.size
        Label:
            text: root.title
            font_size: 80
            size: self.texture_size
            text_size: root.width, None
            halign: 'right'
            right: 230
        Label:
            text: root.display_value
            font_size: 200
            size: self.texture_size
            text_size: root.width, None
            halign: 'right'
            right: 50
            top: 40

<TextGagueSmall>
    size: 340, 220

    RelativeLayout:
        size_hint: None, None
        pos: root.pos
        canvas:
            Color:
                rgba: 0.2,0.2,0.2,1,
            Rectangle:
                size: root.size
            Color:
                rgba: root.bar_color
            Line:
                width: 2
                rectangle: 0, 0, root.width, root.height
        Label:
            text: root.title
            font_size: 40
            #size: 10, 10 #self.texture_size
            text_size: root.width, None
            halign: 'center'
            center_x: root.width/2
            center_y : 180

        Label:
            text: root.display_value
            font_size: 120
            #size: self.texture_size
            text_size: root.width, None
            halign: 'right'
            center_x: root.width/2 - 10


        
<Root>:
    gps_speed_gauge: gps_speed
    rpm_gauge: rpm
    temp_gauge: temp

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: exit_button
        opacity: 0
        text: "Exit"
        on_press: app.stop()
        center: 0,0

    TextGagueSmall:
        id: temp
        title: "Coolant Temp Â°C"
        center: (root.width/4)*3, root.height*.25

        truncate_precision: 1

        threshold_1: 0
        threshold_2: 105
        threshold_3: 110
        max_value: 110

    TextGagueSmall:
        id: rpm
        title: "RPM"
        center: root.width/4, root.height*.25

        truncate_precision: 1

        threshold_1: 0
        threshold_2: 4300
        threshold_3: 4500
        max_value: 4500

    TextGague:
        id: gps_speed
        title: "MPH"
        center: root.width/2, root.height*0.75



    
